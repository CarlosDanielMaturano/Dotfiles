[include]
  path = ~/.gitthemes.gitconfig

[user]
	name = CarlosDanielMaturano
	email = carlosdanielmaturano@proton.me
[credential]
	helper = cache --timeout 3600
[core]
  editor = nvim
  pager = batcat
[difftool]
    prompt = true
[diff]
    colorMoved = default
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    
    light = false     
    line-numbers = true
    side-by-side = true
    features = gruvmax-fang
[merge]
  conflictstyle = diff3
  tool = vimdiff
[alias]
  s = status
[mergetool "nvimdiff"]
    layout = LOCAL,MERGED,REMOTE
