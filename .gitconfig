[include]
  path = ~/.gitthemes.gitconfig

[user]
	name = CarlosDanielMaturano
	email = carlosdanielmaturano@proton.me
[credential]
	helper = cache --timeout 3600
[core]
    editor = nvim
    pager = batcat
[difftool]
    prompt = true
[diff]
    colorMoved = default
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    
    light = false     
    line-numbers = true
    side-by-side = true
    features = gruvmax-fang
[mergetool "nvim"]
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[merge]
    tool = nvim
[mergetool]
    prompt = false
    keepBackup = false 
[alias]
    s = status

